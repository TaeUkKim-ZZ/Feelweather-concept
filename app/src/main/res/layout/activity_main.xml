<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" app:srcCompat="@android:drawable/ic_input_add"
            android:layout_alignParentRight="true" android:layout_alignParentEnd="true" android:layout_marginEnd="25dp"
            android:layout_alignParentBottom="true" android:id="@+id/floatingActionButton2"
            android:layout_marginBottom="25dp" android:layout_marginRight="25dp"/>

    <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" app:srcCompat="@android:drawable/ic_menu_search"
            android:layout_marginBottom="25dp" android:layout_marginRight="10dp"
            android:layout_alignParentBottom="true" android:id="@+id/floatingActionButton3"
            android:layout_toLeftOf="@+id/floatingActionButton2"/>

    <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"/>

</RelativeLayout>